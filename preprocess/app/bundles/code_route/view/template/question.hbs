

<div class="question-image" style="background-image:url('images/question/{{ image }}')"></div>
<form action="#" class="response-form">
    <div class="progress-bar">
        <div class="progress"></div>
    </div>
    <div class="question-label">{{ question }}</div>
    <div class="response-wrapper">

        <div class="row">
            {{#each responses }}
                <div class="response-label col-sm-6"><input type="checkbox" value="{{ value }}" name="responses" id="response-{{ value }}" /><label for="response-{{ value }}"><span class="letter">{{ letter }}</span><span class="content-text">{{ text }}</span> </label></div>
            {{/each}}
        </div>
    </div>
    <input type="submit" class="btn btn-transparent pull-right" value="Valider"/>
</form>